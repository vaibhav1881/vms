    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Redressed&display=swap" rel="stylesheet">
    

    <body>

        <!-- Sing in  Form -->

        <section class="sign-in main">
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="images/hosp_login.jpg" alt="sign up image"></figure>
                        <div class="signup-image-link">
                        </div>
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title" style="font-family: Dancing Script;text-align: center;">Log in</h2>
                        <form method="POST" class="register-form" id="login-form" action="/hospital_login">
                            <p style="color: red;"><%= message %></p>
                            <div class="form-group">
                                <label for="Hospital ID"><i class="fas fa-hospital"></i></label>
                                <input type="email" name="hospid" id="hospid" placeholder="Hospital Email ID" required>
                            </div>
                            <div class="form-group">
                                <label for="Hospital Password"><i class="fas fa-unlock-alt"></i></label>
                                <input type="password" name="hospwd" id="hospwd" placeholder="Hospital Password" required>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" class="form-submit" value="Log in" />
                            </div>
                            <a href="/Registerhospital">Have not registered? Create an account</a>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <script type="text/javascript" src="js/copy.js"></script>
        <script type="text/javascript" src="js/end.js"></script>
        </div>

        <%- include('partials/footer') %>