<%- include('partials/header'); -%>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">

<div class="container" style="margin-top: 10vmin;">
	
<form style="padding: 100px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);font-family: 'Varela Round', sans-serif;" method="post" action="/Registerhospital">
	<h1 style="font-family: 'Dancing Script', cursive;">Register for Hospital</h1><hr>
  <h6 style="color:grey" class="alert alert-<%= color %>"><%= message %></h6>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name"><img src="images/name.png" width="4%">&nbsp;Name</label>
      <input type="text" class="form-control" name="inputName" id="inputName" placeholder="Enter The Hospital Name" required>
    </div>
    <div class="form-group col-md-6">
      <label for="email"><img src="images/email.png" width="4%">&nbsp;Email</label>
      <input type="Email" class="form-control" name="inputEmail" id="inputEmail" placeholder="Enter The Hospital Email ID" required>
    </div>
  </div><br>


  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="contact"><img src="images/call.png" width="4%">&nbsp;Contact No</label>
      <input type="number" class="form-control" id="inputContact" placeholder="Enter Hospital Contact Number" name="inputContact" required>
    </div>
    <div class="form-group col-md-6">
    <div class="col-auto">
      <label class="mr-sm-2" for="hospitaltype"><img src="images/hospitalicon.png" width="5%">&nbsp;Hospital Type</label>
      <select class="custom-select mr-sm-2" id="inputhospitaltype" name="inputhospitaltype">
        <option selected disabled>Choose...</option>
        <option value="G">Government</option>
        <option value="P">Private</option>
      </select>
    </div>
  </div>
</div><br>

<div class="form-row">
  <div class="form-group col-md-6">
    <label for="inputPIN"><img src="images/pin.png" width="4%">&nbsp;PIN Code</label>
    <select id="inputPIN" name="inputPIN" class="form-control">
      <% for(var i =0;i<pincodes.length;i++){ %>
      <option class="form-group"><%= pincodes[i].pincode %></option>
    <% } %>
    </select>
  </div>
  <div class="form-group col-md-6">
    <label for="inputVACC">&nbsp;Vaccine</label>
    <select id="inputVACC" name="inputVACC" class="form-control">
      <% for(var j =0;j<vaccines.length;j++){ %>
      <option class="form-group"><%= vaccines[j].V_name %></option>
    <% } %>
    </select>
  </div>
</div><br>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="pwd"><img src="images/call.png" width="4%">&nbsp;Password</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter Password" name="inputPassword" required>
    </div>
    <div class="form-group col-md-6">
      <label for="repwd"><img src="images/call.png" width="4%">&nbsp;Retype Password</label>
      <input type="password" class="form-control" id="repwd" placeholder="Retype Password" name="reinputPassword" required>
    </div>
  </div><br>


  
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck" required>
      <label class="form-check-label" for="gridCheck">
       The Hospital acknowledges Government RNR and gives the assurance that it is is registered Under MTP Act 1997.
      </label>
    </div>
  </div>

<br>
  <div class="row d-flex justify-content-between">
  	<div class="col-md-8">
  		<button type="submit" class="btn btn-primary" style="width: 40%">Register</button>
  	</div>
  	<div class="col-md-4">
  		<br><img src="images/hospitalregistration.png" class="img-fluid">
  	</div>
  	
  </div>
</form>

</div>
<script type="text/javascript" src="js/end.js"></script>
<%- include('partials/footer'); -%>